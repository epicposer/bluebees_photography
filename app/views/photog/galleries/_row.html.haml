%li{ :id => "row_#{row.id}" }
  %div
    = truncate(row.title, :length => 22)
    = link_to(image_tag('cancel.png'), resource_path(row), :class => "delete")
    - if row.expired?
      .expired
        EXPIRED
  - if row.gallery_photos.first
    = raw "#{link_to(image_tag(row.gallery_photos.first.photo.thumb.url, :size => '150x100'), photog_gallery_gallery_photos_path(@client, row))}<br />"
  - else
    = raw "#{link_to(image_tag('thumb/missing.png', :size => '150x100'), photog_gallery_gallery_photos_path(@client, row))}<br />"
  .actions
    = link_to('Edit', edit_resource_path(row))
    |
    = link_to('Photos', photog_gallery_gallery_photos_path(@client, row))
