%li
  %div
    = truncate(row.title, :length => 22)
    = link_to(image_tag('cancel.png'), resource_path(row), :class => "delete-no-conf")
  = raw "#{link_to(image_tag(row.photo.thumb.url, :size => '150x100'), row.photo.url, :title => row.title, :rel => 'colorbox')}"
  .actions
    = link_to('Edit', edit_resource_path(row))
    |
    = link_to('View', resource_path(row))