-content_for :sidebar do
  %h2 Testimonial
  %p Your testimonials are where you can post testimonials from past clients.
  %p Please enter the author (maybe add their location) and the body of the testimonial.
  %p= "Click the \"#{(controller.action_name == 'new') ? 'Create' : 'Update'}\" button when you're done."

#breadcrumb
  = "#{link_to('Testimonials', admin_testimonials_path)} &raquo; #{controller.action_name.titleize}"
  
= f.error_messages
%p
  = f.label :author
  = f.text_field :author, :class => 'text validate[required,length[5,80]]'
%p
  = f.label :body
  = f.text_area :body, :class => 'brief validate[required,length[5,200]]'

= render :partial => "admin/shared/buttons"

