%li{ :id => "row_#{row.id}" }
  %div
    = truncate(row.title, :length => 22)
    = link_to(image_tag('cancel.png'), resource_path(row), :class => "delete")
    - if row.expired?
      .expired
        EXPIRED
  - if row.booking_photos.first
    = raw "#{link_to(image_tag(row.booking_photos.first.image.thumb.url, :size => '150x100'), admin_client_booking_booking_photos_path(@client, row))}<br />"
  - else
    = raw "#{link_to(image_tag('thumb/missing.png', :size => '150x100'), admin_client_booking_booking_photos_path(@client, row))}<br />"
  .actions
    = link_to('Edit', edit_resource_path(row))
    |
    = link_to('Photos', admin_client_booking_booking_photos_path(@client, row))
    =# "| #{link_to('Comments', admin_booking_comments_path(row))}" unless row.comments.blank?
