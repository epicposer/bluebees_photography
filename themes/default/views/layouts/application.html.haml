!!!
%html{ "xml:lang" => "en", :lang => "en", :xmlns => "http://www.w3.org/1999/xhtml" }
  %head
    %meta{ :content => "text/html;charset=UTF-8", "http-equiv" => "content-type" }
    %meta{ :content => "chrome=1", "http-equiv" => "X-UA-Compatible" }
    %link{:rel => 'shortcut icon', :href => '/favicon.ico'}
    %meta{ :name => 'keywords', :content => defined?(@page_keywords) ? @page_keywords : "#{active_photographer.name.downcase}, photography, professional, newborn, maternity, kids, babies, family, portraits, galleries, portfolio, toronto, ontario, canada" }
    %meta{ :name => 'description', :content => defined?(@page_description) ? @page_description : "#{active_photographer.name}. Professional photographer in Toronto, ON, Canada. Specializing in newborn, maternity, kids, babies, and family portrait photography." }
    %title= @page_title ? "#{@page_title} - #{active_photographer.name}" : "#{controller.controller_name.humanize.titleize} - #{active_photographer.name}"
    = theme_stylesheet_link_tag('default', :media => 'screen, projection')
    = theme_stylesheet_link_tag('print', :media => 'print')
    /[if lt IE 8]
      = theme_stylesheet_link_tag('ie', :media => 'screen, projection')
    = javascript_include_tag('https://ajax.googleapis.com/ajax/libs/jquery/1.5.0/jquery.min.js', 'https://ajax.googleapis.com/ajax/libs/jqueryui/1.8.9/jquery-ui.min.js')
    = theme_javascript_include_tag('jquery.cycle.lite.1.0.min', 'default')
    = yield :head
    %link{ :rel => "shortcut icon", :href => "/favicon.ico", :type => "image/x-icon" }
    - unless active_photographer.google_analytics_key.blank?
      %script{ :type => 'text/javascript'}
        var _gaq = _gaq || [];
        _gaq.push(['_setAccount', '#{active_photographer.google_analytics_key}']);
        _gaq.push(['_trackPageview']);

        (function() {
        var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
        ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
        var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
        })();
  %body
    #container
      = render :partial => '/header'
      - if @content_for_subnav
        #subnav
          %ul= yield(:subnav)
      = yield
      = render :partial => '/footer'