:javascript
  $(document).ready(function() {
    $('#slides').cycle({
  		timeout: 5000,
      speed: 3000
  	});
  });
	
#content
  #slides
    - for gallery in @galleries
      %div
        = link_to(image_tag(gallery.slide.url, :size => '960x540', :alt => gallery.title), gallery_path(gallery), :id => gallery.id, :title => gallery.title)
        %div{ :id => "description_#{gallery.id}", :class => 'slide_description' }
          %h2= gallery.title
          = gallery.description

%p.clearfix
  