#intro
  %h1 Sitemap
#content
  #main
    %ul
      %li
        %h3= link_to(@photographer.name, root_path, :title => @photographer.name)
      %li
        %h3 Galleries
        %ul
          - for gallery in @galleries
            %li= link_to(gallery.title, gallery_path(gallery), :title => gallery.title)
        %br
      %li
        %h3 Pages
        %ul
          - for page in @pages
            %li= link_to(page.title, page_path(page), :title => page.title)
  #sidebar
    = render :partial => '/sidebar'