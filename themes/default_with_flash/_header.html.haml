#header
  %h1
    = link_to(@photographer.name, root_path, :title => @photographer.name)
  %ul.nav
    %li
      = link_to('Galleries', galleries_path, :title => 'Photo Galleries', :class => "#{'active' if controller.controller_name == 'galleries'}")
    - for page in @pages
      %li
        = link_to(page.title, page_path(page), :title => page.title, :class => "#{'active' if @page and @page.id == page.id}")
    - unless @photographer.blog_url.blank?
      %li
        = link_to('Blog', @photographer.blog_url, :title => 'Blog')
    %li.last
      = link_to(raw('Client Login &raquo;'), new_client_session_path, :title => 'Client Login')