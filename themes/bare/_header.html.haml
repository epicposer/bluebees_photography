%h1= link_to(@photographer.name, root_path, :title => @photographer.name)
%ul
  %li
    = link_to('Galleries', galleries_path, :title => 'Photo Galleries')
  - for page in @pages
    %li
      = link_to(page.title, page_path(page), :title => page.title)
  - unless @photographer.blog_url.blank?
    %li
      = link_to('Blog', @photographer.blog_url, :title => 'Photography Blog')
  %li
    = link_to(raw('Client Login &raquo;'), new_client_session_path, :title => 'Client Login')